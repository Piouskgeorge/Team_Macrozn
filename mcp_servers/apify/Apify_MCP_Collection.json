    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Set default values for variables if not already set",
                    "if (!pm.environment.get('base_url')) {",
                    "    pm.environment.set('base_url', 'http://localhost:8000');",
                    "}",
                    "",
                    "// Generate a unique request ID if not present",
                    "if (!pm.environment.get('request_id')) {",
                    "    pm.environment.set('request_id', Date.now().toString());",
                    "}",
                    "",
                    "// Update the JSON-RPC ID with the request ID",
                    "const body = pm.request.body;",
                    "if (body && body.mode === 'raw') {",
                    "    try {",
                    "        const jsonBody = JSON.parse(body.raw);",
                    "        jsonBody.id = parseInt(pm.environment.get('request_id'));",
                    "        body.raw = JSON.stringify(jsonBody, null, 2);",
                    "    } catch (e) {",
                    "        console.log('Error updating request ID:', e);",
                    "    }",
                    "}"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Test response structure",
                    "pm.test('Response is JSON', function () {",
                    "    pm.response.to.have.jsonBody();",
                    "});",
                    "",
                    "pm.test('Response has JSON-RPC structure', function () {",
                    "    const jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('jsonrpc');",
                    "    pm.expect(jsonData).to.have.property('id');",
                    "});",
                    "",
                    "pm.test('JSON-RPC version is 2.0', function () {",
                    "    const jsonData = pm.response.json();",
                    "    pm.expect(jsonData.jsonrpc).to.eql('2.0');",
                    "});",
                    "",
                    "// Test for success or error response",
                    "if (pm.response.json().result) {",
                    "    pm.test('Request was successful', function () {",
                    "        pm.expect(pm.response.json().result).to.not.be.null;",
                    "    });",
                    "} else if (pm.response.json().error) {",
                    "    pm.test('Request had an error', function () {",
                    "        const error = pm.response.json().error;",
                    "        pm.expect(error).to.have.property('code');",
                    "        pm.expect(error).to.have.property('message');",
                    "    });",
                    "}"
                ]
            }
        }
